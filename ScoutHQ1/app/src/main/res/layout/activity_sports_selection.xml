<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#ff3b3b"
    tools:context=".SportsSelection">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_baseball"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_baseball" />

            <ImageButton
                android:id="@+id/btn_basketball_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_basketball_m" />

            <ImageButton
                android:id="@+id/btn_basketball_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_basketball_f" />

            <ImageButton
                android:id="@+id/btn_football"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_football" />

            <ImageButton
                android:id="@+id/btn_soccer_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_soccer_m" />

            <ImageButton
                android:id="@+id/btn_soccer_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_soccer_f" />

            <ImageButton
                android:id="@+id/btn_volleyball_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_volleyball_f" />

            <ImageButton
                android:id="@+id/btn_volleyball_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/btn_volleyball_m" />

        </LinearLayout>
    </ScrollView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</android.support.constraint.ConstraintLayout>